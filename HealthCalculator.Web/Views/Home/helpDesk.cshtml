                            </tr>
                        </table>
                        <div class="text-right">
                            <input type="hidden" id="hdnfileName" />
                            <input type="button" id="btnupload" class="btn btn-reg mb-2 hvr-sweep-to-top" value="Upload" style="float:right" />
                            <input type="button" id="btnClear" class="btn btn-reg mb-2 hvr-sweep-to-top" value="Clear Attachement" onclick="ClearAttach()" style="float:right" />

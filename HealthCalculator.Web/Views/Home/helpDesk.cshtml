                        </th>
                        <th>
                            Added When
                        </th>
                        <th>
                            Attachment(s)
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {

                        <tr class="border">
                            <td>
                                @Html.Raw(item.Message)
                            </td>
                            <td>
                                @Html.Raw(item.UserName)
                            </td>
                            <td>
                                @Html.Raw(item.Addedwhen)
                            </td>
                            <td>
                                <table>
                                    @foreach (var item1 in item.MessageMasterDataList)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Html.Raw(item1.Attachement)" target="_blank">Download</a>
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </div>
</div>
